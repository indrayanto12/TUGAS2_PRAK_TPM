<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Tugas2TPM.example.tpm2.MainActivity2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="210dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/upntercintah" />

        <TextView
            android:id="@+id/nama2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/logo"
            android:text="@string/nama2"
            android:layout_marginHorizontal="70dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/nim2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nama2"
            android:layout_marginHorizontal="70dp"
            android:text="@string/nim2"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ipk2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/nim2"
            android:text="@string/ipk2"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="70dp"/>
    </RelativeLayout>

</LinearLayout>